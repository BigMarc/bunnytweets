# Twitter Multi-Account Automation - Account Configuration
# Copy this file to accounts.yaml and fill in your details.

accounts:
  # --- Account 1 ---
  - name: "MyMainAccount"
    enabled: true

    twitter:
      username: "@your_handle"
      # Browser profile ID from your GoLogin or Dolphin Anty app.
      # GoLogin: find in GoLogin app or via API: GET https://api.gologin.com/browser/v2
      # Dolphin Anty: find via API: GET http://localhost:3001/v1.0/browser_profiles
      profile_id: "your_profile_id"
      # For Dolphin Anty you can alternatively use dolphin_profile_id:
      # dolphin_profile_id: "your_dolphin_profile_id"

    google_drive:
      # The Google Drive folder ID containing media for this account.
      # You can find it in the URL when viewing the folder in Google Drive.
      folder_id: "1ABCdefGHIjklMNOpqrSTUvwx"
      # How often to check for new files (in minutes)
      check_interval_minutes: 15
      # Allowed file types to download and post
      file_types: ["jpg", "png", "gif", "webp", "mp4", "mov", "txt"]

    posting:
      enabled: true
      schedule:
        # Posting times in the configured timezone (see settings.yaml)
        - time: "09:00"
        - time: "15:00"
        - time: "20:00"
      # Fallback text if no .txt file accompanies the media
      default_text: ""
      # Title categories to pick random titles from (managed via Generator page)
      # Always includes "Global" category automatically.
      title_categories: ["Global"]

    retweeting:
      enabled: true
      # Maximum retweets per day for this account
      daily_limit: 3
      target_profiles:
        # Profiles whose tweets should be retweeted
        - username: "@target_profile_1"
          priority: 1
        - username: "@target_profile_2"
          priority: 2
      # Time windows during which retweets are allowed
      time_windows:
        - start: "09:00"
          end: "12:00"
        - start: "14:00"
          end: "17:00"
        - start: "19:00"
          end: "22:00"
      # Strategy for selecting tweets: "latest", "random"
      strategy: "latest"

    # Human-like browsing simulation (anti-detection)
    human_simulation:
      enabled: true
      # Session duration range in minutes (randomized each time)
      session_duration_min: 30
      session_duration_max: 60
      # Max simulation sessions per day
      daily_sessions_limit: 2
      # Max likes per day across all sessions
      daily_likes_limit: 30
      # Time windows when simulation can run
      time_windows:
        - start: "08:00"
          end: "12:00"
        - start: "18:00"
          end: "23:00"
      # Optional: custom action probability weights (default weights used if omitted)
      # action_weights:
      #   scroll: 30
      #   read_tweet: 25
      #   like: 15
      #   view_profile: 15
      #   explore: 15

    # Auto-reply to mentions / notifications
    reply_to_replies:
      enabled: false
      # Maximum replies per day for this account
      daily_limit: 10
      # Time windows during which replies are allowed
      time_windows:
        - start: "09:00"
          end: "12:00"
        - start: "14:00"
          end: "17:00"
      # Reply templates are managed via the web dashboard (Account > Edit)

  # --- Account 2 ---
  - name: "SecondAccount"
    enabled: true

    twitter:
      username: "@second_handle"
      profile_id: "another_profile_id"

    google_drive:
      folder_id: "1XYZabc..."
      check_interval_minutes: 30
      file_types: ["jpg", "png", "mp4", "txt"]

    posting:
      enabled: true
      schedule:
        - time: "10:00"
        - time: "18:00"
      default_text: ""
      title_categories: ["Global"]

    retweeting:
      enabled: true
      daily_limit: 3
      target_profiles:
        - username: "@some_profile"
          priority: 1
      time_windows:
        - start: "10:00"
          end: "13:00"
        - start: "16:00"
          end: "20:00"
      strategy: "latest"

    human_simulation:
      enabled: true
      session_duration_min: 30
      session_duration_max: 60
      daily_sessions_limit: 2
      daily_likes_limit: 25
      time_windows:
        - start: "09:00"
          end: "14:00"
        - start: "19:00"
          end: "22:00"

    reply_to_replies:
      enabled: false
      daily_limit: 10
      time_windows:
        - start: "10:00"
          end: "13:00"
        - start: "16:00"
          end: "19:00"
