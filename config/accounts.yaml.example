# BunnyTweets - Multi-Platform Account Configuration
# Copy this file to accounts.yaml and fill in your details.
# Supported platforms: "twitter" (default), "threads", and "redgifs"

accounts:
  # --- Twitter Account ---
  - name: "MyMainAccount"
    platform: "twitter"      # "twitter" or "threads"
    content_rating: "sfw"    # "sfw" or "nsfw" — controls which global targets are used
    enabled: true

    twitter:
      username: "@your_handle"
      # Browser profile ID from your GoLogin or Dolphin Anty app.
      # GoLogin: find in GoLogin app or via API: GET https://api.gologin.com/browser/v2
      # Dolphin Anty: find via API: GET http://localhost:3001/v1.0/browser_profiles
      profile_id: "your_profile_id"
      # For Dolphin Anty you can alternatively use dolphin_profile_id:
      # dolphin_profile_id: "your_dolphin_profile_id"

    google_drive:
      # The Google Drive folder ID containing media for this account.
      # You can find it in the URL when viewing the folder in Google Drive.
      folder_id: "1ABCdefGHIjklMNOpqrSTUvwx"
      # How often to check for new files (in minutes)
      check_interval_minutes: 15
      # Allowed file types to download and post
      file_types: ["jpg", "png", "gif", "webp", "mp4", "mov", "txt"]

    posting:
      enabled: true
      schedule:
        # Posting times in the configured timezone (see settings.yaml)
        - time: "09:00"
        - time: "15:00"
        - time: "20:00"
      # Fallback text if no .txt file accompanies the media
      default_text: ""
      # Title categories to pick random titles from (managed via Generator page)
      # Always includes "Global" category automatically.
      title_categories: ["Global"]

    retweeting:
      enabled: true
      # Maximum retweets per day for this account
      daily_limit: 3
      target_profiles:
        # Profiles whose tweets should be retweeted
        - username: "@target_profile_1"
          priority: 1
        - username: "@target_profile_2"
          priority: 2
      # Time windows during which retweets are allowed
      time_windows:
        - start: "09:00"
          end: "12:00"
        - start: "14:00"
          end: "17:00"
        - start: "19:00"
          end: "22:00"
      # Strategy for selecting tweets: "latest", "random"
      strategy: "latest"

    # Human-like browsing simulation (anti-detection)
    human_simulation:
      enabled: true
      # Session duration range in minutes (randomized each time)
      session_duration_min: 30
      session_duration_max: 60
      # Max simulation sessions per day
      daily_sessions_limit: 2
      # Max likes per day across all sessions
      daily_likes_limit: 30
      # Time windows when simulation can run
      time_windows:
        - start: "08:00"
          end: "12:00"
        - start: "18:00"
          end: "23:00"
      # Optional: custom action probability weights (default weights used if omitted)
      # action_weights:
      #   scroll: 30
      #   read_tweet: 25
      #   like: 15
      #   view_profile: 15
      #   explore: 15

    # Auto-reply to mentions / notifications
    reply_to_replies:
      enabled: false
      # Maximum replies per day for this account
      daily_limit: 10
      # Time windows during which replies are allowed
      time_windows:
        - start: "09:00"
          end: "12:00"
        - start: "14:00"
          end: "17:00"
      # Reply templates are managed via the web dashboard (Account > Edit)

  # --- Second Twitter Account ---
  - name: "SecondAccount"
    platform: "twitter"
    enabled: true

    twitter:
      username: "@second_handle"
      profile_id: "another_profile_id"

    google_drive:
      folder_id: "1XYZabc..."
      check_interval_minutes: 30
      file_types: ["jpg", "png", "mp4", "txt"]

    posting:
      enabled: true
      schedule:
        - time: "10:00"
        - time: "18:00"
      default_text: ""
      title_categories: ["Global"]

    retweeting:
      enabled: true
      daily_limit: 3
      target_profiles:
        - username: "@some_profile"
          priority: 1
      time_windows:
        - start: "10:00"
          end: "13:00"
        - start: "16:00"
          end: "20:00"
      strategy: "latest"

    human_simulation:
      enabled: true
      session_duration_min: 30
      session_duration_max: 60
      daily_sessions_limit: 2
      daily_likes_limit: 25
      time_windows:
        - start: "09:00"
          end: "14:00"
        - start: "19:00"
          end: "22:00"

    reply_to_replies:
      enabled: false
      daily_limit: 10
      time_windows:
        - start: "10:00"
          end: "13:00"
        - start: "16:00"
          end: "19:00"

  # --- Threads.net Account ---
  - name: "MyThreadsAccount"
    platform: "threads"
    enabled: true

    # Threads uses Instagram login credentials.
    # The browser profile should already be logged in to threads.net.
    threads:
      username: "my_threads_handle"    # Threads/Instagram username (without @)
      profile_id: "gologin_or_dolphin_profile_id"

    google_drive:
      folder_id: "1ABCdefGHIjklMNOpqrSTUvwx"
      check_interval_minutes: 15
      file_types: ["jpg", "png", "gif", "webp", "mp4", "mov", "txt"]

    posting:
      enabled: true
      schedule:
        - time: "11:00"
        - time: "17:00"
        - time: "21:00"
      default_text: ""
      title_categories: ["Global"]

    # Threads uses "reposting" instead of "retweeting"
    reposting:
      enabled: true
      # Maximum reposts per day
      max_per_day: 5
      # Target accounts to repost from (list of @usernames)
      targets:
        - "@target_account_1"
        - "@target_account_2"
      # Time windows during which reposts are allowed
      time_windows:
        - start: "10:00"
          end: "13:00"
        - start: "16:00"
          end: "20:00"

    human_simulation:
      enabled: true
      session_duration_min: 20
      session_duration_max: 45
      daily_sessions_limit: 2
      daily_likes_limit: 20
      time_windows:
        - start: "09:00"
          end: "14:00"
        - start: "19:00"
          end: "23:00"
      # Threads-specific action weights
      # action_weights:
      #   scroll: 30
      #   read_tweet: 25
      #   like: 15
      #   view_profile: 15
      #   explore: 15

    reply_to_replies:
      enabled: false
      daily_limit: 5
      time_windows:
        - start: "10:00"
          end: "20:00"

  # --- RedGifs Account ---
  - name: "MyRedGifsAccount"
    platform: "redgifs"
    content_rating: "nsfw"    # RedGifs content is typically NSFW
    enabled: true

    # The browser profile should already be logged in to redgifs.com.
    redgifs:
      username: "my_redgifs_username"
      profile_id: "gologin_or_dolphin_profile_id"
      # Default tags applied to every upload (discovery keywords)
      # RedGifs requires 3-10 tags; tags are selected by clicking buttons on the upload page
      default_tags: ["blonde", "petite", "amateur"]
      # Whether to enable sound on uploaded videos (default: true)
      sound_on: true
      # Audience preference for uploads (shown in step 3 of the upload wizard)
      # Options: "straight", "gay", "lesbian", "trans", "bisexual", "animated"
      audience_preference: "straight"

    google_drive:
      folder_id: "1ABCdefGHIjklMNOpqrSTUvwx"
      check_interval_minutes: 15
      # RedGifs supports video formats primarily
      file_types: ["mp4", "mov", "webm", "gif", "jpg", "png"]

    posting:
      enabled: true
      schedule:
        - time: "10:00"
        - time: "16:00"
        - time: "22:00"
      # Fallback title if no .txt file accompanies the media
      default_text: ""
      title_categories: ["Global"]

    # RedGifs does not support retweeting/reposting — omit this section.
    # RedGifs does not support replying — omit reply_to_replies section.

    human_simulation:
      enabled: true
      session_duration_min: 15
      session_duration_max: 30
      daily_sessions_limit: 2
      daily_likes_limit: 15
      time_windows:
        - start: "10:00"
          end: "14:00"
        - start: "20:00"
          end: "23:00"
      # RedGifs-specific action weights
      # action_weights:
      #   scroll: 40
      #   view_content: 25
      #   like: 15
      #   explore: 20
